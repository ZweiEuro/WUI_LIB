{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "setup build",
      "type": "shell",
      "command": "cd ${workspaceFolder} && mkdir -p '${workspaceFolder}/build' && cd ${workspaceFolder}/build && cmake -G 'Ninja' -DCMAKE_BUILD_TYPE=Release ..  && ninja -j8 ",
      "problemMatcher": []
    },
    {
      "label": "build",
      "type": "shell",
      "command": "rm -rf '${workspaceFolder}/build/Debug' && cd '${workspaceFolder}/build' && ninja -j8 ",
      "problemMatcher": ["$gcc"]
    }
  ]
}
